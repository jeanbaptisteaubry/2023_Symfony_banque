{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Nos clients</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    {% for typeclient in listeTypeClient  %}

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h3>{{ typeclient.titre }}</h3>
                                </div>
                                <div class="card-body">
                                    <p>{{ typeclient.description }}</p>
                                </div>
                                <div class="card-footer">
                                    <a href=" " class="btn btn-primary">Voir</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block menu %}
    {% import 'macro/macroMenu.html.twig' as macroMenu %}
    {{ macroMenu.menu('Ma banque',3) }}
{% endblock %}

