{# \templates\macro\macroMenu.html.twig #}

{% macro menu(nomBanque, menuActif) %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">{{ nomBanque }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item
       {% if menuActif == 1 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/">Accueil</a>
                </li>
                <li class="nav-item
     {% if menuActif == 2 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/nos_offres">Nos offres</a>
                </li>
                <li class="nav-item
     {% if menuActif == 3 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/nos_clients">Nos clients</a>
                </li>

                <li class="nav-item
                 {% if menuActif == 4 %}
                       active
                   {% endif %}">
                    <a class="nav-link" href="/avis/">Avis des clients</a>
                </li>

                {% if not app.user %} {# Si l'utilisateur n'est pas connecté #}
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Inscription</a>
                    </li>

                    <li class="nav-item">

                        <a class="nav-link" href="/login">Connexion</a>
                    </li>
                {% else %}
                        {# L'utilisateur est connecté
                        on va construire le menu avec ses comptes et ses mouvements #}
                        <li class="nav-item
                        {% if menuActif == 5 %}
                            active
                        {% endif %}">
                            <a class="nav-link" href="/compte">Mes comptes</a>
                        </li>
                    <li class="nav-item
                        {% if menuActif == 6 %}
                            active
                        {% endif %}">
                        <a class="nav-link" href="/virement/sortant">Virements sortants</a>
                    </li>
                    <li class="nav-item
                        {% if menuActif == 7 %}
                            active
                        {% endif %}">
                        <a class="nav-link" href="/virement/entrant">Virements entrants</a>
                    </li>

                        <li class="nav-item
                        {% if menuActif == 5 %}
                            active
                        {% endif %}">
                            <a class="nav-link" href="/">Mon compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Déconnexion</a>
                        </li>
                {% endif %}
            </ul>

        </div>
    </nav>
{% endmacro %}
